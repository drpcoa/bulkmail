# ========================
# Production Configuration
# ========================

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=/api
CORS_ORIGIN=https://yourdomain.com

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=bulkmail
DB_USER=postgres
DB_PASSWORD=your_secure_db_password
DB_SYNC=false
DB_LOGGING=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Authentication
JWT_SECRET=5889c3a32d063fbb813b7c8945178bc7db46779dfa230d4fe8b13aa539df999f
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Providers (configure at least one)

# Mailcow
MAILCOW_API_KEY=your_mailcow_api_key
MAILCOW_API_URL=https://your-mailcow-instance.com/api/v1/
MAILCOW_SENDER=your-email@yourdomain.com

# SMTP.com
SMTPCOM_API_KEY=your_smtp_com_api_key
SMTPCOM_SENDER=your-verified-sender@smtp.com
SMTPCOM_DEFAULT_FROM_NAME="Your Company Name"

# ElasticEmail
ELASTIC_EMAIL_API_KEY=your_elastic_email_api_key
ELASTIC_EMAIL_FROM=your-email@yourdomain.com
ELASTIC_EMAIL_FROM_NAME="Your Company Name"

# Webhook
WEBHOOK_SECRET=your_webhook_secret
ENABLE_WEBHOOKS=false

# Logging
LOG_LEVEL=info
