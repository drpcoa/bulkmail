# ========================
# Netlify Environment Variables
# ========================

# Application
NODE_ENV=production

# API Configuration
VITE_API_URL=/api

# JWT Authentication
JWT_SECRET=generate_a_secure_random_string
JWT_EXPIRES_IN=24h

# Database (if using Netlify Functions with external database)
DATABASE_URL=your_database_connection_string

# Email Providers (configure at least one)

# Mailcow
MAILCOW_API_KEY=your_mailcow_api_key
MAILCOW_API_URL=https://your-mailcow-instance.com/api/v1/
MAILCOW_SENDER=your-email@yourdomain.com

# SMTP.com
SMTPCOM_API_KEY=your_smtp_com_api_key
SMTPCOM_SENDER=your-verified-sender@smtp.com
SMTPCOM_DEFAULT_FROM_NAME="Your Company Name"

# ElasticEmail
ELASTIC_EMAIL_API_KEY=your_elastic_email_api_key
ELASTIC_EMAIL_FROM=your-email@yourdomain.com
ELASTIC_EMAIL_FROM_NAME="Your Company Name"

# Webhook (if using webhooks)
WEBHOOK_SECRET=your_webhook_secret
ENABLE_WEBHOOKS=false

# Rate Limiting (for Netlify Functions)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
